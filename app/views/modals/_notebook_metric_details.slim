div.modal.fade id='metricsViews' aria-labelledby="notebookViewsHeader" aria-describedby="notebookViewsDescription" role='dialog' style="display: none" tabindex="0"
  div.modal-dialog.modal-lg
    div.modal-content
      div.modal-header
        h1.modal-title id="notebookViewsHeader" Notebook Views by User
        p.visually-hidden id="notebookViewsDescription" Dialog for sharing a notebook with other users
        button.close type="button" data-dismiss="modal"
          span aria-hidden="true" &times;
          span.visually-hidden Close
      div.modal-body
        table.centered-table.table.tabular.datatable
          caption.visually-hidden Notebook Views by User
          thead
            tr
              th User
              th Org
              th # Views
              th Last View
            tbody
              -@unique_viewers.sort_by {|_person,info| -info[:count]}.each do |person,info|
                tr
                  td #{person.user_name}
                  td #{person.org}
                  td #{info[:count]}
                  td #{info[:last]}
        div.modal-footer
          div
            button.btn.btn-danger type="button" data-dismiss="modal" Close

