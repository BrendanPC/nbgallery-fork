div.modal.fade id='metricsEdits' aria-labelledby="notebookEditsHeader" aria-describedby="notebookEditsDescription" role='dialog' style="display: none" tabindex="0"
  div.modal-dialog.modal-lg
    div.modal-content
      div.modal-header
        h1.modal-title id="notebookEditsHeader" Edits of Notebook by User
        p.visually-hidden id="notebookEditsDescription" Dialog for sharing a notebook with other users
        button.close type="button" data-dismiss="modal"
          span aria-hidden="true" &times;
          span.visually-hidden Close
      div.modal-body
        table.centered-table.table.tabular.editHistory
          caption.visually-hidden Edits of Notebook by User
          thead
            tr
              th User
              th Org
              th Action
              th Time
            tbody
              -@edit_history.each do |edit|
                -revision = @revisions[edit.tracking]
                tr
                  td =edit.user.user_name
                  td =edit.user.org
                  -if revision
                    td =link_to(edit.action, revision_path(revision))
                  -else
                    td =edit.action
                  td =edit.updated_at
        div.modal-footer
          div
            button.btn.btn-danger type="button" data-dismiss="modal" Close
